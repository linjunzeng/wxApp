page{background: #f1f1f1;}
.collect_con .list_con{margin: 87rpx auto 0;}
.collect_con .list_con .list{margin-bottom:20rpx;padding: 0 24rpx 0 0;width: 100%;height: 240rpx;background: #fff;box-sizing: border-box;}
.collect_con .list_con .list .left{width: 74rpx;height: 100%;overflow: hidden;position: relative;}
.collect_con .list_con .list .left input{width: 100%;height: 100%;opacity: 0;position: absolute;left: 0;top: 0;}
.collect_con .list_con .list .left .icon{margin: auto;width: 32rpx;height: 32rpx;line-height: 32rpx;border-radius: 50%;text-align: center;position: absolute;left: 0;top: 0;right: 0;bottom: 0;background: #fff;color: #ccc;}
.collect_con .list_con .list .left .active{color: #333333;}

.collect_con .list_con .list .info{padding: 39rpx 0;height: 100%;border-bottom: solid 1px #f0f0f0;overflow: hidden;box-sizing: border-box;}
.collect_con .list_con .list .info .img{width: 160rpx;height: 160rpx;position: relative;}
.collect_con .list_con .list .info .img image{margin: auto;max-width: 100%;max-height: 100%;position: absolute;left: 0;top: 0;right: 0;bottom: 0;}
.collect_con .list_con .list .info .detail{padding-left: 20rpx;height: 100%;overflow: hidden;}
.collect_con .list_con .list .info .name_con,.collect_con .list .info .spec{height: 39rpx;line-height: 39rpx;}
.collect_con .list_con .list .info .name{padding-right: 9rpx;display: block;box-sizing: border-box;}
.collect_con .list_con .list .info .spec{font-size: 24rpx;color: #666;}
.collect_con .list_con .list .info .price_con{height: 50rpx;line-height: 50rpx;}
.collect_con .list_con .list .info .price{color: #e41b45;}


.collect_con .list_con .head{margin: 0;padding: 0;height: 87rpx;line-height: 87rpx;border-bottom: solid 1px #f1f1f1;position: fixed;left: 0;top: 0;z-index: 9999;}
.collect_con .list_con .head .remove{padding: 0 24rpx;font-size: 39rpx;color: #333;}