@import "../../wxParse/wxParse.wxss";
/* 问答详情 */
.datail_quewstion{padding:0 24rpx 12rpx;width: 100%;overflow:hidden;box-sizing: border-box;}
.datail_quewstion .item{padding:20rpx 0;line-height:44rpx;font-size:27rpx;}

.datail_quewstion .item .question_l{width: 44rpx;height: 44rpx;border-radius: 15rpx;text-align:center;color:#fff;background:#f68a7e;}
.datail_quewstion .item .question_bg{background:#686868;}
.datail_quewstion .item .question_r{margin-left: 63rpx;height: 44rpx;overflow: hidden;}
.datail_quewstion .item .answer_text{height: auto;}
.datail_quewstion .item .answer_text view{padding: 0 0 20rpx;}
.datail_quewstion .item .answer_text span{color: #e60027}
.datail_quewstion .item .answer_text image{padding: 0 24rpx;width: 100%;box-sizing: border-box;}


/* 在线咨询 */
.qq_list{width: 100%;line-height: 80rpx;box-sizing: border-box;overflow: hidden;}
.qq_list .title{padding: 0 20rpx;border-top: solid 20rpx #f1f1f1;border-bottom: solid 1px #f1f1f1;font-size: 27rpx;background: #fff;color: #333;}
.qq_list .title i{margin-right: 8rpx;font-size: 36rpx;vertical-align: top;}
.qq_list .tip{padding: 0 15rpx;font-size: 27rpx;color: #333;line-height:48rpx;text-align: center;}
.qq_list .list_ul_1{padding: 15rpx 15rpx 0;background: #fff;background: #fff;}
.qq_list .list_ul_1 .list_li{padding: 0 15rpx;width: 25%;line-height: 48rpx;text-align: center;box-sizing: border-box;}
.qq_list .list_ul_1 .list_li image{width: 120rpx;border-radius: 100%;vertical-align: middle;}
.qq_list .list_ul_2{display: block;}
.qq_list .list_ul_2 .list_li{padding: 32rpx;height: 120rpx;border-bottom: solid 1px #f1f1f1;background: #fff;}

.qq_list .list_li .icon{margin: 44rpx 0;width: 32rpx;height: 32rpx;line-height: 32rpx;font-size: 32rpx;color: #000;}
.qq_list .list_li .img{width: 120rpx;height: 120rpx;overflow: hidden;border-radius: 100%;}
.qq_list .list_li .info{margin: 20rpx 63rpx 20rpx 144rpx;height: 120rpx;line-height: 39rpx;font-size: 27rpx;color: #999} 
.qq_list .list_li .info .name{color: #333}

.img_bg{width: 100%;height: 100%;background: rgba(0,0,0,0.4); viewosition: fixed;left: 0;top: 0;z-index: 9999;overflow: hidden;}
.img_bg .img_con{margin: auto;padding: 60rpx;width: 585rpx;height: 840rpx;background: #fff;position: absolute;left: 0;right: 0;top: 0;bottom: 0;box-sizing: border-box;}
.img_bg .img_con .hearer{height: 120rpx;overflow: hidden;}
.img_bg .img_con .hearer .img{width: 120rpx;height: 120rpx;border-radius: 100%;overflow: hidden;}
.img_bg .img_con .hearer .text{margin: 20rpx 0 20rpx 144rpx;}
.img_bg .img_con .hearer .text .name{font-size: 27rpx;color: #333;}
.img_bg .img_con .hearer .text .title{font-size: 24rpx;color: #999;}
.img_bg .img_con .erweima_img{padding: 39rpx;background: #e8e8e8;}
.img_bg .img_con .tips{line-height: 120rpx;font-size: 32rpx;text-align: center;}
.img_bg .img_con .tips2{line-height: 60rpx;font-size: 27rpx;text-align: center;color: #999;visibility: hidden;}
.img_bg .img_con .app_btn{margin-top: 36rpx;display: none;}
.img_bg .img_con .app_btn a{margin: 0 38rpx;width: 150rpx;height: 120rpx;line-height: 56rpx;border: solid 1px #dfdfdf;border-radius: 12rpx;text-align: center;color: #333;}

/* 客服电话 */
.phone_list{padding:36rpx 27rpx 0;border-top: solid 20rpx #f1f1f1;background: #fff;}
.phone_list view{line-height:48rpx;font-size:27rpx;text-align:center;}
.phone_list .text{margin: 15rpx auto;height: 96rpx;line-height: 96rpx;font-size: 32rpx;border-radius: 92rpx;background: #f1f1f1;color: #333;}
.phone_list i.iconfont{margin-right: 8rpx;line-height: 39rpx;font-size: 39rpx;}

/* 公司简介 */
.about_list_con{border-top: solid 20rpx #f1f1f1;color: #333;}
.about_list_con .img_1{margin: 39rpx auto;width: 360rpx;}
.about_list_con .img_2{margin: 39rpx 27rpx;}
.about_list_con .img_3{margin: 99rpx auto 0;width: 320rpx;}
.about_list_con .text_1{margin: 0 27rpx 20rpx;line-height: 48rpx;font-size: 27rpx;text-indent: 2em;}
.about_list_con .text_2{margin: 60rpx 27rpx 20rpx;font-size: 32rpx;color: #000;}
.about_list_con .text_3{width: 100%;line-height: 39rpx;font-size: 27rpx;text-align: center;color: #666;}

.about_list_con_2{border: 0 none;background: #f1f1f1;overflow: hidden;}
.about_list_con_2 .list{margin-top: 129rpx;}
.about_list_con_2 .list li{padding: 15rpx 27rpx;line-height: 48rpx;border-bottom: solid 1px #f1f1f1;font-size: 27rpx;background: #fff;color: #333;}
.about_list_con_2 .list li .icon{font-size: 27rpx;}
.about_list_con_2 .left{width: 99rpx;}
.about_list_con_2 .center{margin: 0 60rpx 0 99rpx;}