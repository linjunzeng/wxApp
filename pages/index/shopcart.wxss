page{background: #f1f1f1;}
.cart_con .list_con{margin: 87rpx auto 99rpx;}
.cart_con .list_con .list{padding: 0 24rpx 0 0;width: 100%;height: 219rpx;background: #fff;box-sizing: border-box;}
.cart_con .list_con .list .left{width: 74rpx;height: 100%;overflow: hidden;position: relative;}
.cart_con .list_con .list .left input{width: 100%;height: 100%;opacity: 0;position: absolute;left: 0;top: 0;}
.cart_con .list_con .list .left .icon{margin: auto;width: 32rpx;height: 32rpx;line-height: 32rpx;border-radius: 50%;text-align: center;position: absolute;left: 0;top: 0;right: 0;bottom: 0;background: #fff;color: #ccc;}
.cart_con .list_con .list .left .active{color: #333333;}

.cart_con .list_con .list .info{padding: 39rpx 0;height: 100%;border-bottom: solid 1px #f0f0f0;overflow: hidden;box-sizing: border-box;}
.cart_con .list_con .list .info .img{width: 140rpx;height: 140rpx;position: relative;}
.cart_con .list_con .list .info .img img{margin: auto;max-width: 100%;max-height: 100%;position: absolute;left: 0;top: 0;right: 0;bottom: 0;}
.cart_con .list_con .list .info .detail{padding-left: 20rpx;height: 100%;overflow: hidden;}
.cart_con .list_con .list .info .name_con,.cart_con .list .info .spec{height: 39rpx;line-height: 39rpx;}
.cart_con .list_con .list .info .name{padding-right: 9rpx;display: block;box-sizing: border-box;}
.cart_con .list_con .list .info .spec{font-size: 24rpx;color: #b0b0b0;}
.cart_con .list_con .list .info .price_con{margin-top: 8rpx;height: 50rpx;line-height: 50rpx;}
.cart_con .list_con .list .info .price{color: #e41b45;}

.cart_con .list_con .number .icon{width: 50rpx;height: 50rpx;line-height: 45rpx;border: solid 1px #f0f0f0;text-align: center;box-sizing: border-box;}
.cart_con .list_con .number .active{color: #ccc;}
.cart_con .list_con .number .text{width: 99rpx;height: 50rpx;border: solid 1px #f0f0f0;border-left: 0 none;border-right: 0 none;box-sizing: border-box;}
.cart_con .list_con .number .text input{width: 100%;height: 100%;text-align: center;vertical-align: top;}


.cart_con .list_con .head{padding: 0;height: 87rpx;line-height: 87rpx;border-bottom: solid 1px #f0f0f0;position: fixed;left: 0;top: 0;z-index: 9999;}
.cart_con .list_con .head .remove{padding: 0 24rpx;font-size: 39rpx;color: #333;}

.cart_con .list_con .foot{height: 99rpx;line-height: 99rpx;border-bottom: 0 none;border-top: solid 1px #f0f0f0;top: auto;bottom: 0}
.cart_con .list_con .foot .right{height: 100%;overflow: hidden;}
.cart_con .list_con .foot .settlement{width: 200rpx;height: 100%;text-align: center;font-size: 32rpx;background: #e41b45;color: #fff;}
.cart_con .list_con .foot .text{overflow: hidden;}
.cart_con .list_con .foot .text span{color: #e41b45;}

/* 失效 */
.cart_con .overdue_con{background: #fff;overflow: hidden;}
.cart_con .overdue_con .list .overdue{margin: auto;width: 60rpx;height: 39rpx;line-height: 39rpx;font-size: 24rpx;text-align: center;border-radius: 8rpx;color: #fff;background: #999;display: block;position: absolute;top: 0;right: 0;bottom: 0;left: 0;}
.cart_con .overdue_con .clearbtn{margin: 30rpx auto;width: 279rpx;height: 60rpx;line-height: 60rpx;border: solid 1px #333;border-radius: 32rpx;text-align: center;}